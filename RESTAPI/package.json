{
  "name": "modular-test-framework",
  "version": "1.0.0",
  "description": "A modular test framework for REST API testing with config-driven setup, DTOs, fluent assertions, and logging",
  "main": "index.js",
  "scripts": {
    "build": "echo 'No build step required for jest tests'",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "testing",
    "api",
    "rest",
    "jest",
    "axios",
    "chai"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "axios": "^1.6.0",
    "chai": "^4.3.10"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!**/tests/**"
    ]
  }
}